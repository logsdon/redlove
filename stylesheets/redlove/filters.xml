.filter-sepia {
	-webkit-filter: sepia(100%);
	filter: url('filters.xml#_sepia');
}
-->
<svg id='image' version="1.1" xmlns="http://www.w3.org/2000/svg" height="0">
	
	<defs>
		
		<filter id="_blur" x="0%" y="0%" width="100%" height="100%">
			<feGaussianBlur in="SourceGraphic" stdDeviation="10" result="outBlur"/>
		</filter>
		<filter id="_brightness">
			<feComponentTransfer>
				<feFuncR type="linear" slope="5"/>
				<feFuncG type="linear" slope="5"/>
				<feFuncB type="linear" slope="5"/>
			</feComponentTransfer>
		</filter>
		<filter id="_contrast">
			<feComponentTransfer>
				<feFuncR type="linear" slope="[amount]" intercept="-(0.5 * [amount]) + 0.5"/>
				<feFuncG type="linear" slope="[amount]" intercept="-(0.5 * [amount]) + 0.5"/>
				<feFuncB type="linear" slope="[amount]" intercept="-(0.5 * [amount]) + 0.5"/>
			</feComponentTransfer>
		</filter>
		<filter id="_contrast2">
			<feGaussianBlur stdDeviation="1.5"/>
			<feComponentTransfer>
				<feFuncR type="discrete" tableValues="0 .5 1 1"/>
				<feFuncG type="discrete" tableValues="0 .5 1"/>
				<feFuncB type="discrete" tableValues="0"/>
			</feComponentTransfer>
		</filter>
		<filter id="_drop-shadow">
			<feGaussianBlur in="SourceAlpha" stdDeviation="[radius]"/>
			<feOffset dx="[offset-x]" dy="[offset-y]" result="offsetblur"/>
			<feFlood flood-color="[color]"/>
			<feComposite in2="offsetblur" operator="in"/>
			<feMerge>
				<feMergeNode/>
				<feMergeNode in="SourceGraphic"/>
			</feMerge>
		</filter>
		<filter id="_drop-shadow1">
			<feGaussianBlur stdDeviation="5" in="SourceAlpha"/>
			<feOffset dy="16" dx="16"/>
			<feMerge>
				<feMergeNode/>
				<feMergeNode in="SourceGraphic"/>
			</feMerge>
		</filter>
		<filter id="_drop-shadow2">
			<feGaussianBlur stdDeviation="4" in="SourceAlpha"/>
			<feOffset dy="10" dx="8"/>
			<feMerge>
				<feMergeNode/>
				<feMergeNode in="SourceGraphic"/>
			</feMerge>
		</filter>
		<filter id="_sepia">
			<feColorMatrix values="0.393 0.769 0.189 0 0
			0.349 0.686 0.168 0 0
			0.272 0.534 0.131 0 0
			0 0 0 1 0" type="matrix"/>
		</filter>
		<filter id="_sepia_old-timey">
			<feColorMatrix values="0.14 0.45 0.05 0 0
			0.12 0.39 0.04 0 0
			0.08 0.28 0.03 0 0
			0 0 0 1 0" type="matrix"/>
		</filter>
		<filter id="_grayscale">
			<feColorMatrix values="0.2126 0.7152 0.0722 0 0
			0.2126 0.7152 0.0722 0 0
			0.2126 0.7152 0.0722 0 0
			0 0 0 1 0" type="matrix"/>
		</filter>
		<filter id="_grayscale2">
			<feColorMatrix values="0.3333 0.3333 0.3333 0 0
			0.3333 0.3333 0.3333 0 0
			0.3333 0.3333 0.3333 0 0
			0 0 0 1 0"/>
		</filter>
		<filter id="_hue-rotate">
			<feColorMatrix values="90" type="hueRotate"/>
		</filter>
		<filter id="_hue-rotate2">
			<feComponentTransfer>
				<feFuncR type="table" tableValues="1 0"/>
				<feFuncG type="table" tableValues="1 0"/>
				<feFuncB type="table" tableValues="1 0"/>
			</feComponentTransfer>
		</filter>
		<filter id="_invert">
			<feComponentTransfer>
				<feFuncR tableValues="1 0" type="table"/>
				<feFuncG tableValues="1 0" type="table"/>
				<feFuncB tableValues="1 0" type="table"/>
			</feComponentTransfer>
		</filter>
		<filter id="_opacity">
			<feComponentTransfer>
				<feFuncA tableValues="0 0.5" type="table">
				</feFuncA>
			</feComponentTransfer>
		</filter>
		<filter id="_saturate">
			<feColorMatrix values="2" type="saturate"/>
		</filter>
		<filter id="_saturate2">
			<feComponentTransfer>
				<feFuncR tableValues="1 .33 .33" type="table"/>
				<feFuncG tableValues=".33 1 .33" type="table"/>
				<feFuncB tableValues=".33 .33 1" type="table"/>
			</feComponentTransfer>
		</filter>
		
		
		<filter id="sepia_color-shift">
			<feComponentTransfer>
				<feFuncR tableValues="0.15 .25" type="table"/>
				<feFuncG tableValues=".01 .25" type="table"/>
				<feFuncB tableValues="0 .09" type="table"/>
			</feComponentTransfer>
		</filter>

	</defs>

</svg>